@using Microsoft.AspNet.Identity
@using Recruitment.Helpers;
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink(Recruitment.Resources.Resources._Hello + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">@Recruitment.Resources.Resources.LogOff</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(Recruitment.Resources.Resources._LogIn, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
<ul class="nav navbar-nav navbar-right">
    <li class="btn-group">
        <a style="background-color:transparent; border-color:transparent;" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">@Recruitment.Resources.Resources.Language <span class="caret"></span></a>

        <ul class="dropdown-menu">
            <li>
                @Url.LangSwitcher(Recruitment.Resources.Resources.Language_en, ViewContext.RouteData, "en")
            </li>
            <li>
                @Url.LangSwitcher(Recruitment.Resources.Resources.Language_mk, ViewContext.RouteData, "mk")
            </li>
        </ul>
    </li>
</ul>
