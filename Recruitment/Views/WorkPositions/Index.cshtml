@model IEnumerable<Recruitment.Models.WorkPosition>

@{
    ViewBag.Title = Recruitment.Resources.Resources._WorkPosition;
}

<h2>@Recruitment.Resources.Resources._WorkPosition</h2>

<p>
    @Html.ActionLink(Recruitment.Resources.Resources.Button_CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongDescription)
            </td>
            <td>
                @Html.ActionLink(Recruitment.Resources.Resources.Button_Edit, "Edit", new { id = item.WorkPosition_id }) |
                @Html.ActionLink(Recruitment.Resources.Resources.Button_Details, "Details", new { id = item.WorkPosition_id }) |
                @Html.ActionLink(Recruitment.Resources.Resources.Button_Delete, "Delete", new { id = item.WorkPosition_id })
            </td>
        </tr>
    }

</table>
